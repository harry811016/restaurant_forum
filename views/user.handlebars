<div class="card">
  <div class="row">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}" style="width: 300px;height: 300px;">
    </div>
    <div class="col-md-8">
      <h1>{{user.name}}</h1>
      <p>Email: {{user.email}}</p>
      <a href="/users/{{user.id}}/edit"><button class="btn btn-primary">Edit</button></a>
    </div>
    <hr>
  </div>
</div>
<div class="card mt-4">
  <div class="card-header">
    <strong>{{totalComments}}</strong> 已評論餐廳
  </div>
  <div class="card-body">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}"><img src="{{this.Restaurant.image}}" alt=""
        style="width:75px;height:75px"></a>
    {{/each}}
  </div>
</div>
<a href="javascript:history.back()">回上一頁</a>