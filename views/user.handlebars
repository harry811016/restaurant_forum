<div class="card">
  <div class="row">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}" style="width: 350px;height: 350px;">
    </div>
    <div class="col-md-8">
      <h1>{{user.name}}</h1>
      <p>[{{user.email}}]</p>
      <form action="/users/{{user.id}}" method="GET">
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
    </div>
    <hr>
  </div>
</div>
